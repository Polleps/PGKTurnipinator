{
  "extends": [
    "tslint:recommended"
  ],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "node_modules/**/*.d.ts",
      "coverage/lcov-report/*.js"
    ]
  },
  "rules": {
    "variable-name": {
      "severity": "off"
    },
    "ordered-imports": {
      "severity": "off"
    },
    "object-literal-sort-keys": false,
    "no-console": {
      "severity": "warning"
    },
    "jsx-boolean-value": [
      "never"
    ],
    "max-classes-per-file": false
  }
}
